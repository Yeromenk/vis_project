@model DataAccess.Model.Znamky
@{
	ViewBag.Title = "CreateZnamky";
}

<h2>Pridat znamky</h2>

@Html.ValidationSummary()

@using(Html.BeginForm("Add", "Znamky", FormMethod.Post, new{@class= "form-horizontal"}))
{
<form class="form-horizontal">
     <div class="form-group">
         <label class="col-sm-2 control-label" >Grade</label>
         <div class="col-sm-10">
       
            @Html.TextBoxFor(x => x.grade, new {@class = "form-control"})
            @Html.ValidationMessageFor(x=>x.grade)
         </div>
     </div>

     <div class-"form-group">
         <label class="col-sm-2 control-label">Subject name</label>
         <div class="col-sm-18">
           
                @Html.TextBoxFor(x => x.subject_name, new {@class = "form-control"})
                @Html.ValidationMessageFor(x=>x.subject_name)
         </div>
         </div>
         
     <div class-"form-group">
         <label class="col-sm-2 control-label">Teacher name</label>
         <div class="col-sm-10">
             
                @Html.TextBoxFor(x => x.teacher, new {@class = "form-control"})
                @Html.ValidationMessageFor(x=>x.teacher)
         </div>
     </div>
       
     <div class-"form-group">
         <div class="col-sm-offset-2 col-sm-10">
             <p></p>
             <button type="submit" class="btn btn-danger">Pridat znamky</button>
             </div>
            </div>
             </form>
}